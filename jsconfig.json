{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@atoms/*": ["./components/atoms/*"],
      "@molecules/*": ["./components/molecules/*"],
      "@organisms/*": ["./components/organisms/*"],
      "@templates/*": ["./components/templates/*"],
      "@pages/*": ["./pages/*"]
    },
    "jsx": "react",
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
